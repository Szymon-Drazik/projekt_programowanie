<Window x:Class="projekt.EdytujPrzepisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytuj Przepis" Height="600" Width="800" Background="#FFF5E1">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Sekcja wyszukiwania -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10" Grid.ColumnSpan="2">
            <Label Content="Wyszukaj przepis:" FontSize="16" FontWeight="Bold"/>
            <ComboBox Name="cmb_listview" Width="250" IsEditable="True" StaysOpenOnEdit="True" IsTextSearchEnabled="False" Margin="10 0 0 0"/>
            <Button Name="btn_search" Content="Szukaj" Width="100" Margin="10 0 0 0" />
        </StackPanel>

        <Label Content="Nazwa przepisu:" FontWeight="Bold" Grid.Row="1" Margin="0,5,0,5" Grid.ColumnSpan="2"/>
        <TextBox Name="txt_name" Grid.Row="2" Margin="0,5,0,5" FontSize="14" Height="25" Grid.ColumnSpan="2"/>

        <Label Content="Składniki:" Grid.Row="3" FontWeight="Bold" Margin="0,5,0,5" Grid.ColumnSpan="2"/>
        <TextBox Name="txt_ingredients" Grid.Row="3" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,36,0,86" Grid.RowSpan="2" Grid.ColumnSpan="2"/>

        <Label Content="Sposób przygotowania:" Grid.Row="4" FontWeight="Bold" Margin="0,97,0,37" Grid.ColumnSpan="2"/>
        <TextBox Name="txt_description" Grid.Row="4" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,141,0,0" Grid.RowSpan="3" Grid.ColumnSpan="2"/>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Left" Margin="520,10,0,10" Grid.ColumnSpan="2">
            <Button Name="btn_save" Content="Zapisz zmiany" Width="120" Margin="5"/>
            <Button Name="btn_cancel" Content="Anuluj" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
